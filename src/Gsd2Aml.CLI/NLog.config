<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets async="true">
    <target name="cli_logfile"
            xsi:type="File"
            maxArchiveFiles="99"
            archiveEvery="day"
            fileName="${specialfolder:folder=LocalApplicationData}\GSD2AML\Logs\CLI\${date:format=yyyy-MM-dd HH-mm-ss:cached=true}.log" />
    <target name="gui_logfile"
            xsi:type="File"
            maxArchiveFiles="99"
            archiveEvery="day"
            fileName="${specialfolder:folder=LocalApplicationData}\GSD2AML\Logs\GUI\${date:format=yyyy-MM-dd HH-mm-ss:cached=true}.log" />
    <!-- <target name="logconsole" xsi:type="Console"/> -->
  </targets>

  <rules>
    <logger name="cli_logger" minlevel="Info" writeTo="cli_logfile" />
    <logger name="gui_logger" minlevel="Info" writeTo="gui_logfile" />
    <!-- <logger name="*" minlevel="Info" writeTo="logconsole" /> -->
  </rules>
</nlog>
